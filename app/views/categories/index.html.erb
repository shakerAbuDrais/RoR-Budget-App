<div class="d-flex flex-column align-items-center mb-3">
  <% @categories.each do |category| %>
    <div class="card m-3" style="width: 80%;">
      <div class="card-body d-flex">
        <div class="d-flex flex-column mr-3 align-items-center flex-grow-1">
          <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
        </div>
        <div class="d-flex align-items-center mx-3 flex-grow-1">
          <%= image_tag category.icon, style: "max-width: 100px" %>
        </div>
      </div>
      <br>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <%= link_to "Add a new category", new_category_path, class: "btn btn-primary" %>
</div>
