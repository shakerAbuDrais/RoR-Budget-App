<%= form_for @category, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10 text-center">
      <%= f.text_field :name, class: "form-control", style: "width: 95%; margin: auto;" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :icon, class: "col-sm-2 control-label" %>
    <div class="col-sm-10 text-center">
      <%= f.text_field :icon, class: "form-control", style: "width: 95%; margin: auto;" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save", class: "btn btn-primary btn-lg", style: "width: 100%; height: 60px;" %>
    </div>
  </div>
<% end %>
