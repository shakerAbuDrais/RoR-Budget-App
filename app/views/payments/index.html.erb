<div class="container payment-container">
  <h1 class="text-center">Transactions for <%= @category.name %></h1>
  <div class="total-amount">Total Amount: <%= @total_amount %></div>
  <div class="row row-payment">
    <% @payments.each do |payment| %>
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-body d-flex justify-content-between">
            <h5 class="card-title mr-auto"><%= payment.name %></h5>
            <p class="card-text ml-auto"><%= payment.amount %></p>
            <h6 class="card-subtitle mb-2 text-muted"><%= payment.created_at %></h6>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center align-items-center mt-3">
    <%= link_to "Add a new payment", new_category_payment_path(@category), class: "btn btn-success payment-btn text-center" %>
  </div>
</div>
