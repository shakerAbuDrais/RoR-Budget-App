<div class="container">
  <h1 class="text-center">Transactions for <%= @category.name %></h1>
  <div>Total Amount: <%= @total_amount %></div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Date</th>
        <th>Amount</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.created_at %></td>
          <td><%= payment.amount %></td>
          <td><%= payment.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center mt-3">
    <%= link_to "Add a new payment", new_category_payment_path(@category), class: "btn btn-success" %>
  </div>
  <%= link_to "Back", categories_path, class: "btn btn-secondary mt-3" %>
</div>
