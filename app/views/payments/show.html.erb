<h1>Payments for <%= @category.name %></h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
